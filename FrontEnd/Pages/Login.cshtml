@page
@model FrontEnd.Pages.Shared.Login
@{
    ViewData["Title"] = "Giriş Yapma";
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row ">
<div class="form-container">
<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" aria-disabled="true" aria-selected="false">Giriş Yap</a>
  </li>
  <li class="nav-item" role="presentation">
    <a  asp-page="/Register" class="nav-link" aria-selected="true">Kayıt Ol</a>
  </li>
</ul>
      </div>
            <div class="col-md-12 mb-3">
                <div class="card text-dark">
<div class="tab-content">
  <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
    <form>
      <div class="form-outline mb-4">
        <label class="form-label" for="loginName">Kullanıcı Adı</label>
        <input type="email" id="loginName" class="form-control" />
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="loginPassword">Şifre</label>
        <input type="password" id="loginPassword" class="form-control" />
      </div>
      <button type="submit" class="acc-button">Giriş Yap</button>
    </form>
  </div>
</div>
    </div>
</div> 
</div>